  <POU Name="FB_AVG200" Id="{2fa836b5-70e1-44f4-b2e7-392f758f0e0f}" SpecialFunc="None">
    <Declaration><![CDATA[//Created by Dimitar Stojanov 06.2023

//Functionality: Calculate average value of the last 200 input samples, use for analog inputs that affectc PID regulation.

FUNCTION_BLOCK FB_AVG200
VAR_INPUT
	i_rSignal			:REAL;
END_VAR
VAR_OUTPUT
	q_rSignalAvg		:REAL;
END_VAR
VAR
	arrSignals			:ARRAY[0..199] OF REAL;
	i					:INT;
	j					:INT;
	k					:INT;
	Sum					:REAL;
END_VAR
]]></Declaration>
    <Implementation>
      <ST><![CDATA[FOR k:=0 TO 198 DO
	arrSignals[k]:=arrSignals[k+1];
END_FOR
arrSignals[199]:=i_rSignal;
Sum:=0;
FOR j:=0 TO 199 DO
	Sum := Sum + arrSignals[j];
END_FOR
IF Sum <> 0 THEN
	q_rSignalAvg:=Sum/200;
ELSIF Sum = 0 THEN
	q_rSignalAvg:=0;
END_IF]]></ST>
    </Implementation>
